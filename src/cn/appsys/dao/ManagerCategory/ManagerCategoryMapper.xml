<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.appsys.dao.ManagerCategory.ManagerCategoryMapper">
      
      <!--List<AppCategory> getAppCategoryLevelByParentId(@Param("parentId")String parentId);-->
      <select id="getAppCategoryLevelByParentId" resultType="AppCategory">
            select * from app_category 
                 <where>
                      <if test="parentId == null">
                           and parentId is null
                      </if>
                      <if test="parentId != null">
                           and parentId = #{parentId}
                      </if>
                 </where>
      </select>
      
  
</mapper>